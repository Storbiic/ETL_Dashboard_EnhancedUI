# ETL Dashboard Environment Configuration Template
# Copy this file to .env and update the values as needed

# FastAPI Backend Configuration
FASTAPI_HOST=0.0.0.0
FASTAPI_PORT=8000
FASTAPI_RELOAD=true

# Flask Frontend Configuration
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
FLASK_DEBUG=true
FLASK_SECRET_KEY=change-me-in-production

# File Upload Configuration
MAX_UPLOAD_SIZE=100MB
UPLOAD_FOLDER=data/uploads
PROCESSED_FOLDER=data/processed

# Pipeline Configuration
PIPELINE_OUTPUT_FOLDER=data/pipeline_output
POWERBI_TEMPLATES_FOLDER=powerbi/templates
AUTO_COPY_TO_PIPELINE=true

# Database Configuration
DATABASE_URL=sqlite:///data/processed/etl.sqlite

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# ETL Configuration
DEFAULT_ID_COLUMN=YAZAKI PN
MAX_PREVIEW_ROWS=1000
CHUNK_SIZE=10000

# Docker Network Configuration (for production)
FASTAPI_BACKEND_HOST=backend
FASTAPI_BACKEND_PORT=8000

# Security Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5000,http://127.0.0.1:5000

# Performance Configuration
WORKERS=1
MAX_CONNECTIONS=100

# Feature Flags
ENABLE_AUTO_PIPELINE=false
ENABLE_PROFILING=true
ENABLE_METRICS=false
